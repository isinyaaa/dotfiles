[user]
    name = Isabella Basso
[sendemail]
    confirm = auto
    smtpEncryption = ssl
    smtpServerPort = 465
[include]
    path = ~/.gitconfig-common
[includeIf "gitdir:~/repos/redhat/"]
    path = ~/.gitconfig-work
[includeIf "gitdir:~/repos/usp/"]
    path = ~/.gitconfig-usp
[credential]
	helper = !pass-git-helper $@
[init]
    defaultBranch = main
[format]
    signOff = true
[commit]
    gpgSign = true
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    pager = true
    ui = auto
[core]
    autocrlf = input
    pager = diff-so-fancy | less -RFX
[diff]
    tool = nvim
    submodule = log
[difftool]
    prompt = true
[difftool "nvim"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[difftool "vscodium"]
    cmd = vscodium --wait --diff \"$LOCAL\" \"$REMOTE\"
[merge]
    conflictstyle = diff3
    tool = nvim
[mergetool]
    prompt = false
[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[mergetool "vscodium"]
    cmd = vscodium --wait \"$MERGED\"
[alias]
    save-staged = "!bash -c \"git stash --keep-index; git stash push -m \"staged\" --keep-index; git stash pop stash@{1}\""
    stash-staged = "!bash -c \"git save-staged; git commit -m \"temp\"; git stash; git reset --hard HEAD^; git stash pop\""
